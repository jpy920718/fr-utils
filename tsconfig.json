{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es5",
    "traceResolution": false,
    "downlevelIteration": true,
  },
  "include": ["./src", "./types/*.d.ts"]
}
